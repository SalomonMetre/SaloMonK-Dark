{
  "name": "Harper - Gruvbox Dark Soft",
  "type": "dark",
  "colors": {
    // Core editor – classic Gruvbox dark soft background
    "editor.background": "#282828",
    "editor.foreground": "#ebdbb2",
    "editor.lineHighlightBackground": "#3c3836",
    "editorCursor.foreground": "#fabd2f",

    // Selection & highlights – warm & subtle
    "editor.selectionBackground": "#50494580",
    "editor.selectionHighlightBackground": "#50494540",
    "editor.wordHighlightBackground": "#3c3836",
    "editor.wordHighlightStrongBackground": "#504945",

    // UI elements – consistent Gruvbox dark tones
    "activityBar.background": "#282828",
    "activityBar.foreground": "#ebdbb2",
    "activityBarBadge.background": "#8ec07c",
    "activityBarBadge.foreground": "#282828",
    "sideBar.background": "#282828",
    "sideBar.foreground": "#a89984",
    "sideBarTitle.foreground": "#928374",
    "statusBar.background": "#282828",
    "statusBar.foreground": "#a89984",
    "titleBar.activeBackground": "#282828",
    "titleBar.activeForeground": "#ebdbb2",
    "editorGroupHeader.tabsBackground": "#282828",

    // Tabs – Gruvbox style distinction
    "tab.activeBackground": "#3c3836",
    "tab.activeForeground": "#ebdbb2",
    "tab.activeBorderTop": "#8ec07c",
    "tab.inactiveBackground": "#282828",
    "tab.inactiveForeground": "#928374"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#928374",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted",
        "string.template"
      ],
      "settings": {
        "foreground": "#b8bb26"
      }
    },
    {
      "name": "Python Docstrings",
      "scope": [
        "string.quoted.docstring.multi.python",
        "string.quoted.multi.python"
      ],
      "settings": {
        "foreground": "#b8bb26",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords / Storage / Operators",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#fb4934"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call"
      ],
      "settings": {
        "foreground": "#8ec07c"
      }
    },
    {
      "name": "Types / Classes",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "support.class",
        "support.type"
      ],
      "settings": {
        "foreground": "#fabd2f"
      }
    },
    {
      "name": "Variables & Parameters",
      "scope": [
        "variable",
        "variable.parameter",
        "variable.other"
      ],
      "settings": {
        "foreground": "#83a598"
      }
    },
    {
      "name": "Numbers & Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "support.constant"
      ],
      "settings": {
        "foreground": "#d3869b"
      }
    },
    {
      "name": "Punctuation / Braces / Delimiters",
      "scope": [
        "punctuation",
        "meta.brace",
        "punctuation.separator",
        "punctuation.section"
      ],
      "settings": {
        "foreground": "#a89984"
      }
    },
    {
      "name": "Attributes / JSON Keys / HTML Tags",
      "scope": [
        "entity.other.attribute-name",
        "support.type.property-name",
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#fe8019"
      }
    },
    {
      "name": "Markdown Headings",
      "scope": ["markup.heading", "markdown.heading"],
      "settings": {
        "foreground": "#ebdbb2",
        "fontStyle": "bold"
      }
    }
  ]
}