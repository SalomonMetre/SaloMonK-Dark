{
    "name": "Harper - Teal Hybrid Soft (Eye Comfort)",
    "type": "dark",
    "colors": {
        // Gentle near-black with slight warmth
        "editor.background": "#151515",
        "editor.foreground": "#E8E6E3",

        // Softer line highlight
        "editor.lineHighlightBackground": "#1e1e1e",

        // Muted but still elegant cursor
        "editorCursor.foreground": "#9ABBD9",

        // Very soft selection (same hue, much lower opacity)
        "editor.selectionBackground": "#9ABBD91C",
        "editor.selectionHighlightBackground": "#00000000",

        // Subtle word highlights
        "editor.wordHighlightBackground": "#222222",
        "editor.wordHighlightStrongBackground": "#222222",

        // UI elements – toned down vibrance
        "activityBarBadge.background": "#9ABBD9",
        "activityBarBadge.foreground": "#151515",

        "sideBar.background": "#151515",
        "sideBar.foreground": "#B0ACA5",
        "sideBarTitle.foreground": "#858585",

        "statusBar.background": "#151515",
        "statusBar.foreground": "#858585",

        "titleBar.activeBackground": "#151515",
        "titleBar.activeForeground": "#B0ACA5",

        "editorGroupHeader.tabsBackground": "#151515",

        // Tabs – softer active state
        "tab.activeBackground": "#1e1e1e",
        "tab.activeForeground": "#FDFAF1",
        "tab.activeBorderTop": "#9ABBD9",
        "tab.inactiveBackground": "#151515",
        "tab.inactiveForeground": "#7A766F"
    },
    "tokenColors": [
        {
            "name": "Comment (Mid-tone Warm Grey)",
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {
                "foreground": "#A29E99",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Quoted Strings (Pale Slate Brown)",
            "scope": ["string.quoted"],
            "settings": {
                "foreground": "#D3C5BC"
            }
        },
        {
            "name": "Base Source (Pale Platinum)",
            "scope": ["source"],
            "settings": {
                "foreground": "#E8E6E3"
            }
        },
        {
            "name": "Normal Text/Punctuation (Dimmed Grey)",
            "scope": [
                "variable",
                "punctuation",
                "meta.tag",
                "punctuation.definition.tag",
                "punctuation.separator",
                "punctuation.section",
                "meta.brace",
                "meta.delimiter"
            ],
            "settings": {
                "foreground": "#B0ACA5"
            }
        },
        {
            "name": "Keywords & Storage (Soft Teal)",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "storage.modifier",
                "storage.type"
            ],
            "settings": {
                "foreground": "#66B0B0",
                "fontStyle": "normal"
            }
        },
        {
            "name": "Classes (Pale Platinum Bold)",
            "scope": [
                "entity.name.type",
                "support.class",
                "entity.other.inherited-class",
                "support.type",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#E8E6E3",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Functions (Soft Clear Sky Slate)",
            "scope": [
                "meta.function-call",
                "entity.name.function",
                "variable.function",
                "support.function",
                "keyword.other.special-method"
            ],
            "settings": {
                "foreground": "#9ABBD9"
            }
        },
        {
            "name": "Template Strings / Symbols (Soft Harper Blue)",
            "scope": [
                "string",
                "string.template",
                "constant.other.symbol",
                "constant.other.key"
            ],
            "settings": {
                "foreground": "#8CA8D6"
            }
        },
        {
            "name": "Numbers & Constants (Soft Harper Lime)",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "constant.escape",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#C2C520"
            }
        },
        {
            "name": "Attributes (Soft Harper Blue)",
            "scope": [
                "entity.other.attribute-name",
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#8CA8D6"
            }
        },
        {
            "name": "Tags (Dark Teal – softened)",
            "scope": ["entity.name.tag", "meta.tag.sgml"],
            "settings": {
                "foreground": "#518988"
            }
        },
        {
            "name": "JSON Keys (Soft Teal)",
            "scope": ["support.type.property-name.json"],
            "settings": {
                "foreground": "#66B0B0"
            }
        },
        {
            "name": "Markdown - Heading (Cream Bold)",
            "scope": ["markdown.heading", "markup.heading | markup.heading entity.name"],
            "settings": {
                "foreground": "#FDFAF1",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown - Link (Soft Harper Blue)",
            "scope": ["string.other.link.title.markdown"],
            "settings": {
                "foreground": "#8CA8D6",
                "fontStyle": "underline"
            }
        },
        {
            "name": "Invalid (Bold Cream)",
            "scope": ["invalid", "invalid.illegal"],
            "settings": {
                "foreground": "#FDFAF1",
                "fontStyle": "bold"
            }
        }
    ]
}