{
    "name": "Harper - Teal Hybrid Final (Perfected Comments)",
    "type": "dark",
    "colors": {
        // BACKGROUND: Soft Charcoal
        "editor.background": "#232323",
        "editor.foreground": "#CFCBC4",
        
        // HIGHLIGHTS
        "editor.lineHighlightBackground": "#2F2F2F",
        
        "editorCursor.foreground": "#D89D38",

        // SELECTION: Deep Gold (Opacity 40)
        "editor.selectionBackground": "#D89D3866",

        // AUTOMATIC MATCHES: Invisible
        "editor.selectionHighlightBackground": "#00000000",

        // VARIABLE HIGHLIGHTS
        "editor.wordHighlightBackground": "#353535",
        "editor.wordHighlightStrongBackground": "#353535",

        // UI Colors
        "activityBarBadge.background": "#D89D38",
        "activityBarBadge.foreground": "#151515",
        "sideBarTitle.foreground": "#909090",
        "sideBar.background": "#232323",
        "sideBar.foreground": "#A8A49D",
        "statusBar.background": "#232323",
        "statusBar.foreground": "#909090",
        "titleBar.activeBackground": "#232323",
        "titleBar.activeForeground": "#A8A49D",
        "editorGroupHeader.tabsBackground": "#232323",
        
        // TABS
        "tab.activeBackground": "#2F2F2F",
        "tab.activeForeground": "#FEFBEA",
        "tab.activeBorderTop": "#D89D38",
        "tab.inactiveBackground": "#232323",
        "tab.inactiveForeground": "#726E6A"
    },
    "tokenColors": [
        {
            "name": "Comment (Mid-tone Warm Grey)",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#A29E99"
            }
        },
        {
            "name": "Quoted Strings (Harper Green)",
            "scope": [
                "string.quoted"
            ],
            "settings": {
                "foreground": "#489E48"
            }
        },
        {
            "name": "Base Source (Warm Silver)",
            "scope": [
                "source"
            ],
            "settings": {
                "foreground": "#CFCBC4"
            }
        },
        {
            "name": "Normal Text/Punctuation (Dimmed Grey)",
            "scope": [
                "variable",
                "punctuation",
                "meta.tag",
                "punctuation.definition.tag",
                "punctuation.separator",
                "punctuation.section",
                "meta.brace",
                "meta.delimiter"
            ],
            "settings": {
                "foreground": "#A8A49D",
                "fontStyle": ""
            }
        },
        {
            "name": "Python Source Override (No Italic)",
            "scope": "source.python",
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Python Function Call Override (No Italic)",
            "scope": [
                "meta.function-call.python",
                "meta.function-call.arguments.python"
            ],
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Keywords & Storage (Teal)",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "storage.modifier",
                "storage.type"
            ],
            "settings": {
                "foreground": "#70C0BF",
                "fontStyle": "normal"
            }
        },
        {
            "name": "Classes (Warm Silver Bold Italic)",
            "scope": [
                "entity.name.type",
                "support.class",
                "entity.other.inherited-class",
                "support.type",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#CFCBC4",
                "fontStyle": "bold italic"
            }
        },
        {
            "name": "Functions (Deep Gold Italic)",
            "scope": [
                "meta.function-call",
                "entity.name.function",
                "variable.function",
                "support.function",
                "keyword.other.special-method"
            ],
            "settings": {
                "foreground": "#D89D38",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Template Strings / Symbols (Harper Blue)",
            "scope": [
                "string",
                "string.template",
                "constant.other.symbol",
                "constant.other.key"
            ],
            "settings": {
                "foreground": "#7FB5E1"
            }
        },
        {
            "name": "Numbers & Constants (Harper Lime)",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "constant.escape",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#D6DA25"
            }
        },
        {
            "name": "Attributes (Harper Blue Normal)",
            "scope": [
                "entity.other.attribute-name",
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#7FB5E1",
                "fontStyle": ""
            }
        },
        {
            "name": "Tags (Dark Teal)",
            "scope": [
                "entity.name.tag",
                "meta.tag.sgml"
            ],
            "settings": {
                "foreground": "#5A9A98"
            }
        },
        {
            "name": "JSON Keys (Teal)",
            "scope": [
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#70C0BF"
            }
        },
        {
            "name": "Markdown - Heading (Cream Bold)",
            "scope": [
                "markdown.heading",
                "markup.heading | markup.heading entity.name"
            ],
            "settings": {
                "foreground": "#FEFBEA",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown - Link (Harper Blue)",
            "scope": [
                "string.other.link.title.markdown"
            ],
            "settings": {
                "foreground": "#7FB5E1"
            }
        },
        {
            "name": "Invalid (Bold Cream)",
            "scope": [
                "invalid",
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#FEFBEA",
                "fontStyle": "bold"
            }
        }
    ]
}