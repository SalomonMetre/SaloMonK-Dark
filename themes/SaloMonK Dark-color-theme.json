{
    "name": "Harper - Gruvbox Teal Hybrid Deep Dark (Vibrant Convincing Blue)",
    "type": "dark",
    "colors": {
        // Primary background — very deep near-black as requested
        "editor.background": "#1e1e1e",
        "editor.foreground": "#E8E6E3",

        // Slightly elevated surface for line highlight and active elements
        "editor.lineHighlightBackground": "#252525",

        // Retained elegant teal cursor
        "editorCursor.foreground": "#9ABBD9",

        // Soft selection using your signature teal (low opacity)
        "editor.selectionBackground": "#9ABBD91F",
        "editor.selectionHighlightBackground": "#00000000",

        // Word highlights adjusted for the deeper background
        "editor.wordHighlightBackground": "#252525",
        "editor.wordHighlightStrongBackground": "#2d2d2d",

        // UI elements — unified with the deep #1e1e1e base
        "activityBarBadge.background": "#9ABBD9",
        "activityBarBadge.foreground": "#1e1e1e",
        "sideBar.background": "#1e1e1e",
        "sideBar.foreground": "#B0ACA5",
        "sideBarTitle.foreground": "#858585",
        "statusBar.background": "#1e1e1e",
        "statusBar.foreground": "#858585",
        "titleBar.activeBackground": "#1e1e1e",
        "titleBar.activeForeground": "#E8E6E3",
        "editorGroupHeader.tabsBackground": "#1e1e1e",

        // Tabs — active state gently distinguished
        "tab.activeBackground": "#252525",
        "tab.activeForeground": "#FDFAF1",
        "tab.activeBorderTop": "#C2C520",
        "tab.inactiveBackground": "#1e1e1e",
        "tab.inactiveForeground": "#7A766F"
    },
    "tokenColors": [
        {
            "name": "Comment (Warm mid-tone grey)",
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": {
                "foreground": "#A29E99",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Quoted Strings",
            "scope": ["string.quoted"],
            "settings": {
                "foreground": "#D3C5BC"
            }
        },
        {
            "name": "Base Source / Normal Text",
            "scope": ["source", "variable", "punctuation", "meta.brace"],
            "settings": {
                "foreground": "#E8E6E3"
            }
        },
        {
            "name": "Keywords & Storage (Soft teal)",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.operator.new",
                "storage.modifier",
                "storage.type"
            ],
            "settings": {
                "foreground": "#66B0B0",
                "fontStyle": "normal"
            }
        },
        {
            "name": "Classes / Types",
            "scope": [
                "entity.name.type",
                "support.class",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#E8E6E3",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "support.function",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#9ABBD9"
            }
        },
        {
            "name": "Strings / Template strings / Symbols / Attributes / Parameters / Markdown Links (Vibrant & convincing blue)",
            "scope": [
                "string",
                "string.template",
                "constant.other.symbol",
                "entity.other.attribute-name",
                "variable.parameter",
                "string.other.link.title.markdown"
            ],
            "settings": {
                "foreground": "#5EB3FF"
            }
        },
        {
            "name": "Numbers & Constants",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant"
            ],
            "settings": {
                "foreground": "#C2C520"
            }
        },
        {
            "name": "Tags (Softened dark teal)",
            "scope": ["entity.name.tag"],
            "settings": {
                "foreground": "#518988"
            }
        },
        {
            "name": "JSON Keys",
            "scope": ["support.type.property-name.json"],
            "settings": {
                "foreground": "#66B0B0"
            }
        },
        {
            "name": "Markdown - Heading",
            "scope": ["markup.heading", "markdown.heading"],
            "settings": {
                "foreground": "#FDFAF1",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Invalid / Illegal",
            "scope": ["invalid", "invalid.illegal"],
            "settings": {
                "foreground": "#FDFAF1",
                "fontStyle": "bold"
            }
        }
    ]
}