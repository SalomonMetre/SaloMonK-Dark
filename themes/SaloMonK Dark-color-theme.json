{
    "name": "SaloMonK Elemental Final v6 - True Teal with Python-Specific Adjustments",
    "type": "dark",
    "colors": {
        "editor.background": "#1b1b1b",
        "editor.foreground": "#D8D8D8",
        "editor.lineHighlightBackground": "#232323",
        "editorCursor.foreground": "#70C0BF",

        // SELECTION: Distinct Teal (Opacity 55)
        // This is the only thing that will have color in your editor.
        "editor.selectionBackground": "#426e6e55",

        // AUTOMATIC MATCHES: Invisible
        // Prevents other words from lighting up when you select text.
        "editor.selectionHighlightBackground": "#00000000",

        // VARIABLE HIGHLIGHTS: Dark Grey
        // When you click a variable, other instances become slightly lighter grey.
        // No color, just contrast.
        "editor.wordHighlightBackground": "#2A2A2A",
        "editor.wordHighlightStrongBackground": "#2A2A2A",

        // UI Colors (kept exactly as you like them)
        "activityBarBadge.background": "#70C0BF",
        "activityBarBadge.foreground": "#ffffff",
        "sideBarTitle.foreground": "#C0C0C0",
        "sideBar.background": "#1b1b1b",
        "sideBar.foreground": "#C0C0C0",
        "statusBar.background": "#1b1b1b",
        "statusBar.foreground": "#C0C0C0",
        "titleBar.activeBackground": "#1b1b1b",
        "titleBar.activeForeground": "#C0C0C0",
        "editorGroupHeader.tabsBackground": "#1b1b1b",
        "tab.activeBackground": "#232323",
        "tab.activeForeground": "#ffffff",
        "tab.activeBorderTop": "#96fffd",
        "tab.inactiveBackground": "#1b1b1b",
        "tab.inactiveForeground": "#A0A0A0"
},
    "tokenColors": [
        {
            "name": "Comment (Neutral Grey Italic)",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#959595"
            }
        },
        {
            "name": "Quoted Strings (Lighter Silver)",
            "scope": [
                "string.quoted"
            ],
            "settings": {
                "foreground": "#CCCCCC"
            }
        },
        {
            "name": "Base Source (Silver)",
            "scope": [
                "source"
            ],
            "settings": {
                "foreground": "#D8D8D8"
            }
        },
        {
            "name": "Normal Text/Punctuation (Lighter Grey)",
            "scope": [
                "variable",
                "punctuation",
                "meta.tag",
                "punctuation.definition.tag",
                "punctuation.separator",
                "punctuation.section",
                "meta.brace",
                "meta.delimiter"
            ],
            "settings": {
                "foreground": "#B8B8B8",
                "fontStyle": ""
            }
        },
        {
            "name": "Python Source Override (No Italic)",
            "scope": "source.python",
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Python Function Call Override (No Italic)",
            "scope": [
                "meta.function-call.python",
                "meta.function-call.arguments.python"
            ],
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Keywords & Storage (True Teal)",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "storage.modifier",
                "storage.type"
            ],
            "settings": {
                "foreground": "#80dfdd",
                "fontStyle": "normal"
            }
        },
        {
            "name": "Classes (Darker Teal Italic)",
            "scope": [
                "entity.name.type",
                "support.class",
                "entity.other.inherited-class",
                "support.type",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#ffffff",
                "fontStyle": "bold italic"
            }
        },
        {
        "name": "Functions (Pure White Bold Italic)",
        "scope": [
            "meta.function-call",
            "entity.name.function",
            "variable.function",
            "support.function",
            "keyword.other.special-method"
        ],
        "settings": {
            "foreground": "#00c5b5",
            "fontStyle": "italic"
        }
    },
        {
            "name": "Template Strings / Symbols (True Teal)",
            "scope": [
                "string",
                "string.template",
                "constant.other.symbol",
                "constant.other.key"
            ],
            "settings": {
                "foreground": "#70C0BF"
            }
        },
        {
            "name": "Numbers & Constants (Pure White)",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "constant.escape",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#ffffff"
            }
        },
        {
            "name": "Attributes (True Teal Normal)",
            "scope": [
                "entity.other.attribute-name",
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#70C0BF",
                "fontStyle": ""
            }
        },
        {
            "name": "Tags (Darker Teal)",
            "scope": [
                "entity.name.tag",
                "meta.tag.sgml"
            ],
            "settings": {
                "foreground": "#5A9A98"
            }
        },
        {
            "name": "JSON Keys (True Teal)",
            "scope": [
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#70C0BF"
            }
        },
        {
            "name": "Markdown - Heading (White Bold)",
            "scope": [
                "markdown.heading",
                "markup.heading | markup.heading entity.name"
            ],
            "settings": {
                "foreground": "#ffffff",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown - Link (True Teal)",
            "scope": [
                "string.other.link.title.markdown"
            ],
            "settings": {
                "foreground": "#70C0BF"
            }
        },
        {
            "name": "Invalid (Bold White)",
            "scope": [
                "invalid",
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#ffffff",
                "fontStyle": "bold"
            }
        }
    ]
}