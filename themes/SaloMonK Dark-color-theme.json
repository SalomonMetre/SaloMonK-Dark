{
    "name": "Harper - Teal Hybrid Final (Night Onyx)",
    "type": "dark",
    "colors": {
        // BACKGROUND: Night Onyx (Near-Black Void)
        "editor.background": "#111111",
        "editor.foreground": "#E6E4E1",
        
        // HIGHLIGHTS: Dark Charcoal
        "editor.lineHighlightBackground": "#1F1F1F",
        
        // CURSOR: Clear Sky Slate
        "editorCursor.foreground": "#ABCDE3",

        // SELECTION: Clear Sky Slate (Opacity Reverted to 10%)
        "editor.selectionBackground": "#ABCDE31A",

        // AUTOMATIC MATCHES: Invisible
        "editor.selectionHighlightBackground": "#00000000",

        // VARIABLE HIGHLIGHTS: Deep Grey
        "editor.wordHighlightBackground": "#2A2A2A",
        "editor.wordHighlightStrongBackground": "#2A2A2A",

        // UI Colors
        "activityBarBadge.background": "#ABCDE3",
        "activityBarBadge.foreground": "#151515",
        "sideBarTitle.foreground": "#909090",
        "sideBar.background": "#111111",
        "sideBar.foreground": "#A8A49D",
        "statusBar.background": "#111111",
        "statusBar.foreground": "#909090",
        "titleBar.activeBackground": "#111111",
        "titleBar.activeForeground": "#A8A49D",
        "editorGroupHeader.tabsBackground": "#111111",
        
        // TABS
        "tab.activeBackground": "#1F1F1F",
        "tab.activeForeground": "#FEFBEA",
        "tab.activeBorderTop": "#ABCDE3",
        "tab.inactiveBackground": "#111111",
        "tab.inactiveForeground": "#726E6A"
    },
    "tokenColors": [
        {
            "name": "Comment (Mid-tone Warm Grey)",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#A29E99"
            }
        },
        {
            "name": "Quoted Strings (Pale Slate Brown)",
            "scope": [
                "string.quoted"
            ],
            "settings": {
                "foreground": "#D6C9C0"
            }
        },
        {
            "name": "Base Source (Pale Platinum)",
            "scope": [
                "source"
            ],
            "settings": {
                "foreground": "#E6E4E1"
            }
        },
        {
            "name": "Normal Text/Punctuation (Dimmed Grey)",
            "scope": [
                "variable",
                "punctuation",
                "meta.tag",
                "punctuation.definition.tag",
                "punctuation.separator",
                "punctuation.section",
                "meta.brace",
                "meta.delimiter"
            ],
            "settings": {
                "foreground": "#A8A49D",
                "fontStyle": ""
            }
        },
        {
            "name": "Python Source Override (No Italic)",
            "scope": "source.python",
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Python Function Call Override (No Italic)",
            "scope": [
                "meta.function-call.python",
                "meta.function-call.arguments.python"
            ],
            "settings": {
                "fontStyle": ""
            }
        },
        {
            "name": "Keywords & Storage (Teal)",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.other",
                "keyword.operator.new",
                "storage.modifier",
                "storage.type"
            ],
            "settings": {
                "foreground": "#70C0BF",
                "fontStyle": "normal"
            }
        },
        {
            "name": "Classes (Pale Platinum Bold Italic)",
            "scope": [
                "entity.name.type",
                "support.class",
                "entity.other.inherited-class",
                "support.type",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#E6E4E1",
                "fontStyle": "bold italic"
            }
        },
        {
            "name": "Functions (Clear Sky Slate Italic)",
            "scope": [
                "meta.function-call",
                "entity.name.function",
                "variable.function",
                "support.function",
                "keyword.other.special-method"
            ],
            "settings": {
                "foreground": "#ABCDE3",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Template Strings / Symbols (Harper Blue)",
            "scope": [
                "string",
                "string.template",
                "constant.other.symbol",
                "constant.other.key"
            ],
            "settings": {
                "foreground": "#7FB5E1"
            }
        },
        {
            "name": "Numbers & Constants (Harper Lime)",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "constant.escape",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#D6DA25"
            }
        },
        {
            "name": "Attributes (Harper Blue Normal)",
            "scope": [
                "entity.other.attribute-name",
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#7FB5E1",
                "fontStyle": ""
            }
        },
        {
            "name": "Tags (Dark Teal)",
            "scope": [
                "entity.name.tag",
                "meta.tag.sgml"
            ],
            "settings": {
                "foreground": "#5A9A98"
            }
        },
        {
            "name": "JSON Keys (Teal)",
            "scope": [
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#70C0BF"
            }
        },
        {
            "name": "Markdown - Heading (Cream Bold)",
            "scope": [
                "markdown.heading",
                "markup.heading | markup.heading entity.name"
            ],
            "settings": {
                "foreground": "#FEFBEA",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Markdown - Link (Harper Blue)",
            "scope": [
                "string.other.link.title.markdown"
            ],
            "settings": {
                "foreground": "#7FB5E1"
            }
        },
        {
            "name": "Invalid (Bold Cream)",
            "scope": [
                "invalid",
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#FEFBEA",
                "fontStyle": "bold"
            }
        }
    ]
}